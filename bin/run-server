#! /usr/bin/env python
import sys
import _mypath
from pony_build import server, simple_app
import shelve

HOST=''
PORT=int(sys.argv[2])

try:
    dbfile = shelve.open(sys.argv[1])
except IOError:
    dbfile = shelve.open(sys.argv[1], 'c')

pbs_app = simple_app.PonyBuildCoordinator(db=dbfile)
web_app = simple_app.SimpleApp(pbs_app)

the_server = server.create(HOST, PORT, pbs_app, web_app.wsgi_interface)

try:
    print 'serving on host %s, port %d, path /xmlrpc' % (HOST, PORT)
    the_server.serve_forever()
except KeyboardInterrupt:
    print 'exiting'
